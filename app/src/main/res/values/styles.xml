<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- TitleBar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏底色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Action控件颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- ToolBar高度 -->
        <item name="actionBarSize">45dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- CardView相关 -->
    <style name="MyCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="MyCardView.MainLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MyCardView.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="MyCardView.ModuleLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="MyCardView.Key">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="MyCardView.Value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2.5</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

</resources>
